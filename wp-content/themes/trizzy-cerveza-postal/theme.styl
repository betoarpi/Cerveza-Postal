#footer 
	background #112b3d

#footer-bottom
	background darkBlue
	color lighterBlue
	font-size 16px

#footer h3.footer, .widget_ns_mailchimp form
	background #112b3d
	font-size 22px !important

.footer-logo
	float left
	opacity 0.4
	width 100%
	
	img
		display block
		margin 0 auto 20px auto
		max-width 100%
		width 145px

#footer:hover .footer-logo
	opacity 1
	transition all .3s ease-in-out

.widget
	font-size 15px
	margin 0 0 20px 0 !important
	
	h6
		color #d0d0d0 !important
	
.widget p
	padding-bottom 5px
	line-height 125%
	
	a, strong 
		color orange !important

.widget-registro
	clear both

.register-form
	float left
	width 100%
	
	#mc_embed_signup_scroll
		float left
		width 100%
		
		.mc-field-group
			float left
			width 100%
			
			label
				float left
				font-family 'nexa_rust_sansblack'
				margin-bottom 0
				width 100%
				
				.asterisk
					color orange
					font-family 'Open Sans'
					font-weight 700
			
			input
				background #183e58
				border none
				box-sizing border-box
				color white
				float left
				margin-bottom 8px
				padding 8px 12px
				width 100%
		
		.submit-register-form
			float left
			font-family 'nexa_rust_sansblack'
			font-size 16px
			font-weight normal
			margin 5px 0 0 0
			text-align center
			
			&:hover
				background lighterBlue
				color blue
//Forms
input[type="text"],
input[type="number"],
input[type="url"],
input[type="password"],
input[type="email"],
textarea,
select
	padding 10px 12px
	outline none
	font-size 13px
	color #2e2e2e
	margin 0
	max-width 100%
	display block
	background #fff
	border 2px solid #f5f5f5
	font-weight 600
select
	padding 0
input[type="text"]:focus,
input[type="number"]:focus,
input[type="password"]:focus,
input[type="url"]:focus,
input[type="email"]:focus,
textarea:focus
	border 2px solid #f2f2f2
	color #2e2e2e
	background #fefefe
	transition all 0.1s ease-in-out
	transition all 0.1s easeout	
//Revolution Slider
.rev_slider
	touch-action initial !important
//Parallax-Img
.ParallaxImg
	top 20px !important
.ParallaxImg-banner
	top 35px !important
//PopUp
.PopUp
	position absolute
	top 0
	lef 0
	width 100%
	background rgba(black, 0.6);
	height 100%
	overflow hidden
	z-index 200
	.PopUp-active
		top 30px !important
	.PopUp-container
		background url("img/fondoPopUp.png")
		background-size 100% auto
		background-repeat no-repeat
		background-color #e9e3d5
		width 600px
		height 600px
		top 110%
		position fixed
		right 50%
		transform translateX(50%)
		text-align right
		transition all .5s
		
		.PopUp-logoContainer
			max-width 150px
			display inline-block
			margin 7%
			img
				width 100%
		.PopUp-infoContainer
			text-align center
			margin-top 30px
			.PopUp-question
				font-size 40px
				margin 0
				.simbol
					color darkBlue
					transform rotate(180deg)
					display inline-block
					margin 0
					font-weight normal
			.PopUp-awnser
				margin-top 10px
				a
					display inline-block
					background #d3472a
					color white
					padding 5px 0
					width 90px
					border-radius 3px
					text-decoration none
					text-transform uppercase
					font-size 20px
					&:first-child
						margin-right 60px
			.PopUp-info
				margin 40px 0
				text-transform uppercase
				font-size 16px
				padding 0 20px
				a
					color #d3472a
// Media queries fixes
@media only screen and (max-width: 1389px) and (min-width: 960px)
	.fullwidth .fullwidth-element.home-slider
		width 100%

@media only screen and (max-width: 991px)
	.post-type-archive
		.parallax-titlebar
			.parallax-content
				h2
					padding-left 0px !important
	
	.page
		.parallax-titlebar
			.parallax-content
				h2
					padding-left 0px !important
	
	.blog .titlebar .container .sixteen, .page .titlebar .container .sixteen
		padding-left 0px

@media only screen and (max-width: 990px) and (min-width: 768px)	
	#navigation .menu > li > a, #navigation ul li a
		font-size 15px!important
		
	#navigation .menu > li > a
		padding 17px 12px 15px 12px	
	#logo 	
		a 
			img 
				width 76px

@media only screen and (max-width: 767px)
	.PopUp
		.PopUp-active
			top 10px !important
		.PopUp-container
			width 96%
			right 0%
			left 2%
			transform translateX(0)
			position relative
			.PopUp-infoContainer
				margin-top 20px
				.PopUp-question
					font-size 30px
				.PopUp-awnser
					a
						&:first-child
							margin-right 10px
				.PopUp-info
					font-size 14px
			
	a.menu-trigger
		background blue !important
		
	#logo
		float none
		margin 0 auto
		position static
		
		a 
			img 
				margin 0 auto
				width 100px
	
	#top-bar 
		.eight.columns
			width 50%
