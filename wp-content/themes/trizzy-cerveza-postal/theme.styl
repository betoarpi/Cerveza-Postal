			border-bottom none

.pricing-table .pricing-cta
	background gray
	color white
	clear both
	display block
	margin 0 auto
	overflow hidden
	padding 10px 10px
	text-align center
	width 70%

.container .page ul li, .post-content ul li 
	list-style none
