.pricing-table-container
	padding-top 30px

.pricing-table-container > .one-third
	box-sizing border-box
	padding 20px

.pricing-table
	background lightGray
	border 1px solid rgba(0,0,0,0.05)
	box-sizing border-box
	color rgba(0,0,0,0.6)
	float left
	padding 20px
	position relative
	width 100%
	
.pricing-table > header 
	text-align center
	
	.pricing-table-title
		float left
		margin 20px 0
		text-align center
		width 100%
		
.pricing-table .subscription-cost
